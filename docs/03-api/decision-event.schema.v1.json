{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/card-fraud/decision-event/1.0/decision-event.schema.json",
  "title": "Fraud Decision Event",
  "description": "Canonical v1 fraud decision event consumed by card-fraud-transaction-management. This schema describes the structural contract only (shape/types/enums), not compliance policy.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "event_version",
    "event_type",
    "produced_at",
    "trace_id",
    "transaction_id",
    "ruleset_key",
    "ruleset_version",
    "decision",
    "decision_reason",
    "matched_rules",
    "transaction"
  ],
  "properties": {
    "event_version": {
      "type": "string",
      "const": "1.0"
    },
    "event_type": {
      "type": "string",
      "const": "FRAUD_DECISION"
    },
    "produced_at": {
      "type": "string",
      "format": "date-time"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "transaction_id": {
      "type": "string",
      "minLength": 1
    },
    "ruleset_key": {
      "type": "string",
      "enum": ["CARD_PREAUTH", "CARD_POSTAUTH"]
    },
    "ruleset_version": {
      "type": "integer",
      "minimum": 1
    },
    "decision": {
      "description": "PREAUTH uses APPROVE/DECLINE; POSTAUTH uses null.",
      "type": ["string", "null"],
      "enum": ["APPROVE", "DECLINE", null]
    },
    "decision_reason": {
      "description": "Nullable in POSTAUTH.",
      "type": ["string", "null"],
      "enum": ["RULE_MATCH", "VELOCITY_MATCH", "SYSTEM_DECLINE", "DEFAULT_ALLOW", null]
    },
    "matched_rules": {
      "type": "array",
      "maxItems": 100,
      "items": { "$ref": "#/definitions/matchedRule" }
    },
    "transaction": { "$ref": "#/definitions/transaction" }
  },
  "allOf": [
    {
      "if": {
        "properties": { "ruleset_key": { "const": "CARD_POSTAUTH" } },
        "required": ["ruleset_key"]
      },
      "then": {
        "properties": {
          "decision": { "type": "null" },
          "decision_reason": { "type": "null" }
        },
        "required": ["decision", "decision_reason"]
      }
    },
    {
      "if": {
        "properties": { "ruleset_key": { "const": "CARD_PREAUTH" } },
        "required": ["ruleset_key"]
      },
      "then": {
        "properties": {
          "decision": { "type": "string", "enum": ["APPROVE", "DECLINE"] },
          "decision_reason": { "type": "string", "enum": ["RULE_MATCH", "VELOCITY_MATCH", "SYSTEM_DECLINE", "DEFAULT_ALLOW"] }
        },
        "required": ["decision", "decision_reason"]
      }
    }
  ],
  "definitions": {
    "matchedRule": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "rule_id",
        "rule_version",
        "rule_type",
        "reason_code",
        "severity",
        "matched_at"
      ],
      "properties": {
        "rule_id": { "type": "string", "minLength": 1 },
        "rule_version": { "type": "integer", "minimum": 1 },
        "rule_type": { "type": "string", "minLength": 1 },
        "priority": { "type": "integer", "minimum": 0 },
        "reason_code": { "type": "string", "minLength": 1 },
        "severity": {
          "type": "string",
          "enum": ["LOW", "MEDIUM", "HIGH"]
        },
        "matched_at": { "type": "string", "format": "date-time" }
      }
    },
    "transaction": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "occurred_at",
        "card_id",
        "merchant_id",
        "amount",
        "currency",
        "country"
      ],
      "properties": {
        "occurred_at": { "type": "string", "format": "date-time" },
        "card_id": {
          "description": "Tokenized stable card identifier. Never raw PAN.",
          "type": "string",
          "minLength": 1
        },
        "card_last4": {
          "description": "Optional last4 for analyst usability.",
          "type": "string",
          "pattern": "^[0-9]{4}$"
        },
        "card_network": {
          "description": "Optional card network (e.g., VISA, MC, AMEX, DISCOVER, JCB, UNIONPAY).",
          "type": "string",
          "minLength": 1
        },
        "merchant_id": { "type": "string", "minLength": 1 },
        "amount": { "type": "number" },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 },
        "mcc": { "type": "string", "minLength": 3, "maxLength": 4 },
        "ip": { "type": "string", "minLength": 1 }
      }
    }
  }
}
